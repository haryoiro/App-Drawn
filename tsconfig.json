{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "lib": [ "DOM","ES2020" ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "types": ["node", "express", "socket.io", "socket.io-client"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
